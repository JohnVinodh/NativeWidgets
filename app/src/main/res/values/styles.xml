<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="customFontFamily" >
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#ff0000</item>
        <item name="android:titleTextStyle">@style/MyActionBar.Title</item>
        <item name="android:subtitleTextStyle">@style/MyActionBar.Subtitle</item>
    </style>

    <style name="DeviceDefaultDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:listViewStyle">@style/myListViewStyle</item>
    </style>
    <style name="MyActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MyActionBar.Subtitle">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MycompatTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:dialogTheme">@style/myDialogTheme</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="myDialogTheme" parent="Theme.AppCompat.Dialog.Alert">

    </style>
    <style name="FullscreenTheme" parent="MycompatTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="AppBaseTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppThemeJohn" parent="AppBaseTheme">

    </style>

    <style name="AppThemeJohn.TestTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="myEditTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/loadingcolor</item>
        <item name="windowNoTitle">true</item>
        <item name="android:editTextStyle">@style/myEditText</item>
        <item name="android:listViewStyle">@style/myListViewStyle</item>
    </style>

    <style name="myListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:divider">@color/colorPrimaryDark</item>
    </style>
    <style name="myEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    </style>

    <style name="DropDownLeftUp">
        <item name="android:windowEnterAnimation">@anim/grow_fade_from_bottomleft</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out_from_bottom</item>
    </style>
    <style name="DropDownRightUp">
        <item name="android:windowEnterAnimation">@anim/grow_fade_from_bottomright</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out_from_bottom</item>
    </style>
    <style name="DropUpDown">
        <item name="android:windowEnterAnimation">@anim/grow_fade_from_topright</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out_from_bottom</item>
    </style>
    <style name="SlideInUp">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out_from_bottom</item>
    </style>
    <style name="SlideInDown">
        <item name="android:windowEnterAnimation">@anim/slide_in_down</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out_from_bottom</item>
    </style>
    <style name="Center">
        <item name="android:windowEnterAnimation">@anim/grow_fade_from_center</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out_from_bottom</item>
    </style>
    <style name="SlideInLeft">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out_from_bottom</item>
    </style>
    <style name="SlideInRight">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out_from_bottom</item>
    </style>

</resources>
