<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kony.nativewidgets.ContactsPickerSample">

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:id="@+id/ed_firstname"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        tools:layout_editor_absoluteX="8dp" />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Phone number"
        app:layout_constraintTop_toBottomOf="@+id/ed_firstname"
        android:id="@+id/ed_phno"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacts Picker"
        android:onClick="onBtnContactPicker"
        app:layout_constraintTop_toBottomOf="@+id/ed_phno"
        android:id="@+id/btn_contactpicker"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
